<Window x:Class="JRPG.View.UserScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JRPG.View"
        mc:Ignorable="d"
        Title="UserScreen" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Grid.Column="0" Source="/sprites/characters/mage/mage_1_idle.png" RenderOptions.EdgeMode="Aliased" RenderOptions.BitmapScalingMode="NearestNeighbor"></Image>

        <Grid Grid.Row="1" Grid.Column="0" Margin="10px">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Nazwa użytkownika" />
            <TextBlock Grid.Row="0" Grid.Column="1" Text="username" />

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Punkty Życia" />
            <TextBlock Grid.Row="1" Grid.Column="1" Text="hp" />

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Atak" />
            <TextBlock Grid.Row="2" Grid.Column="1" Text="atk" />

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Obrona" />
            <TextBlock Grid.Row="3" Grid.Column="1" Text="def" />

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Aktualny poziom" />
            <TextBlock Grid.Row="4" Grid.Column="1" Text="level" />

            <TextBlock Grid.Row="5" Grid.Column="0" Text="Punkty Doświadczenia" />
            <TextBlock Grid.Row="5" Grid.Column="1" Text="exp" />

            <TextBlock Grid.Row="6" Grid.Column="0" Text="Ilość złota" />
            <TextBlock Grid.Row="6" Grid.Column="1" Text="gold" />
        </Grid>

        <ListView Grid.Row="0" Grid.Column="1">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn x:Name="current_equipment" >
                            <GridViewColumn.Header>
                                <TextBlock Text="Założone przedmioty"/>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>

        <ListView Grid.Row="1" Grid.Column="1">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn x:Name="equipment">
                            <GridViewColumn.Header>
                                <TextBlock Text="Ekwipunek"/>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>

        <UniformGrid Rows="2" Grid.Column="2" Grid.Row="1">
            <Button Content="Przejdź do sklepu"/>
            <Button Content="Przejdź do walki"/>
        </UniformGrid>
